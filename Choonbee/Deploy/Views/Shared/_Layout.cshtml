<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - DMV Sport Karate</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <style>
            @@media all {
	            .page-break {display: none; }
            }

            @@media print {
	            .page-break { display:block; page-break-before: always; }
            }
        </style>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><img src="~/Images/pimalogo.jpg" /></p>
                </div>
                
                <div class="float-right">
                    <section id="login">
                        
                    </section>
                    <nav>
                        
                        <ul id="menu">
                            <span class="site-title" style="margin-right: 10px;">@Html.ActionLink("DMV Sport Karate League", "Index", "Home")</span>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li><a href="@Choonbee.Controllers.ChoonbeeHelpers.getLatestTournamentLinkHref()">Tournament</a></li>
                            <li><a href="/Tournament/ViewDivisions/@Choonbee.Controllers.ChoonbeeHelpers.getLatestTournament().TournamentId">Divisions</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - DMV Sport Karate</p>
                </div>
            </div>
        </footer>
        @if (ViewContext.RouteData.GetRequiredString("action") == "ManageBracket")
        {
            
        }
        else
        {
            @Html.Raw(Scripts.Render("~/bundles/jquery"))
            @RenderSection("Scripts", required: false)
        }
        
        
    </body>
</html>
