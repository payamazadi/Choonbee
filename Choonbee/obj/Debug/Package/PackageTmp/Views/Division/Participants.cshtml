@model LinkedList<Choonbee.Models.Participant>
@{
    ViewBag.Title = "Participants";
}

<h2>@ViewBag.Heading</h2>
<h3>Manage Participants</h3>

<h4><a href="/Division/AddParticipant/@ViewBag.DivisionId">Add Participants</a></h4>
<h4><a href="/Division/Split/@ViewBag.DivisionId">Split Division</a></h4>

    @if(Model != null){
        <table>
            <tr>
                <td>First</td><td>Last</td><td>Rank</td><td>Age</td><td>Gender</td><td>Height</td><td></td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Rank.RankName</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.HeightFeet'@item.HeightInches</td>
                    <td><a href="/Division/RemoveParticipant/@ViewBag.DivisionId?participantId=@item.ParticipantId">Remove from Division</a></td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No participants found.</p>
    }
<br />
<a href="/Tournament/Details/@ViewBag.TournamentId">Return to tournament..</a>